<animated-vector xmlns:aapt="http://schemas.android.com/aapt"
                 xmlns:android="http://schemas.android.com/apk/res/android">
    <aapt:attr name="android:drawable">
        <vector
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:viewportHeight="24"
                android:viewportWidth="24"
                android:height="24dp"
                android:width="24dp">

            <path
                    android:strokeLineCap="round"
                    android:name="efect"
                    android:strokeWidth="1"
                    android:strokeColor="#fff"
                    android:strokeAlpha="0.15"
                    android:pathData="M12,12L12,0 M12,12L20,4 M12,12L24,12 M12,12L20,20 M12,12L12,24 M12,12L4,20 M12,12L0,12 M12,12L4,4"
            />

            <path
                    android:fillColor="#FF2F0080"
                    android:fillAlpha="0.3"
                    android:pathData="M0,0 H24 V24 H0 Z"
            />

            <path
                    android:fillColor="#FF000233"
                    android:strokeColor="#FF2F0080"
                    android:strokeWidth="0.5"
                    android:strokeLineJoin="round"
                    android:pathData="M4,4 H20 V20 H4 Z"
            />

            <path
                    android:fillAlpha="0.3"
                    android:fillColor="#FF2F0080"
                    android:strokeLineJoin="round"
                    android:pathData="M4,4 H20 V20 H4 Z"
            />

            <path
                    android:strokeAlpha="0.2"
                    android:strokeWidth="2"
                    android:strokeColor="#FF2F0080"
                    android:pathData="M5,5 H19 V19 H5 Z"
            />

            <path
                    android:strokeAlpha="0.15"
                    android:strokeWidth="2"
                    android:strokeColor="#FF2F0080"
                    android:pathData="M7,7 H17 V17 H7 Z"
            />
        </vector>
    </aapt:attr>
    <target android:name="efect">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
            <objectAnimator
                        android:propertyName="pathData"
                        android:duration="500"
                        android:valueFrom="M12,12L12,0 M12,12L20,4 M12,12L24,12 M12,12L20,20 M12,12L12,24 M12,12L4,20 M12,12L0,12 M12,12L4,4"
                        android:valueTo="M12,12L20,4 M12,12L24,12 M12,12L20,20 M12,12L12,24 M12,12L4,20 M12,12L0,12 M12,12L4,4 M12,12L12,0"
                        android:valueType="pathType"
                        android:repeatCount="infinite"
                        android:interpolator="@android:anim/decelerate_interpolator"
                />
                <objectAnimator
                        android:propertyName="strokeAlpha"
                        android:duration="1000"
                        android:valueFrom="0.15"
                        android:valueTo="0.3"
                        android:valueType="floatType"
                        android:repeatCount="infinite"
                        android:repeatMode="reverse"
                />
            </set>
        </aapt:attr>
    </target>
</animated-vector>


