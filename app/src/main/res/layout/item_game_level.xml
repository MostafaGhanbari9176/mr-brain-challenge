<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/item_game_mode"
                android:layout_height="@dimen/item_game_mode">
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:src="@drawable/item_level"
            android:id="@+id/imgLevelMenu"
    >
    </ImageView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.29">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.18">
            <TextView
                    android:text="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/txtSubjectLevel" android:gravity="center"
                    android:textSize="@dimen/txt_big" android:textStyle="bold" android:textColor="@color/light"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.1">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.13">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" app:srcCompat="@drawable/item_level_progress"
                        android:id="@+id/imgStateLevel"/>
                <TextView
                        android:text="0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/txtScoreLevel" android:gravity="center"
                        android:textSize="@dimen/txt_small_two" android:textStyle="bold"
                        android:textColor="@color/dark"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.3">
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>