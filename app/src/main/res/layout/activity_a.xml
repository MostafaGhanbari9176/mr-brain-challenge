<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tire_back"
                android:id="@+id/GameParent" android:layoutDirection="rtl">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentBottom="true" android:gravity="bottom">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/puzzle_height" android:id="@+id/LLRightA"
                android:background="@color/secondaryDarkYellow">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/puzzle_height" android:id="@+id/LLSpaceA"
                android:background="@color/secondaryDarkOrange">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/puzzle_height" android:id="@+id/LLLeftA"
                android:background="@color/secondaryDarkYellow">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="@dimen/puzzle_height"
            android:layout_height="@dimen/puzzle_height" android:background="@color/secondaryLightGreen"
            android:id="@+id/LLPuzzleA" android:layout_centerInParent="true">
    </LinearLayout>
    <Button
            android:text="شروع"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnStartGame" android:layout_centerInParent="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtAlpha"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" android:textSize="18sp" android:textStyle="bold"
            android:textColor="@color/secondaryLightYellow" android:background="@drawable/progress_back"
            android:padding="4dp"/>
    <TextView
            android:text="Loser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loseMessage" android:layout_marginTop="78dp"
            android:layout_below="@+id/btnStartGame" android:layout_centerHorizontal="true" android:textSize="24sp"
            android:textColor="@color/secondaryDarkOrange" android:textStyle="bold" android:alpha="0.5"
            android:scaleX="0" android:scaleY="0"/>
</RelativeLayout>