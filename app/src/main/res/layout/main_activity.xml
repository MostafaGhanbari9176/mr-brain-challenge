<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl" android:background="@drawable/morabaabi">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/containerGameLevels"
    >

    </FrameLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/big_progress"
            android:id="@+id/imgProgressAM"
            android:alpha="0"/>
    <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/ic_close"
            android:id="@+id/imgControlGameLevels"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp"
    />
</RelativeLayout>