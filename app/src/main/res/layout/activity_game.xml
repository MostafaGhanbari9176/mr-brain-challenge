<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/parentAG"
                android:layoutDirection="rtl"
                android:background="@color/light2">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/ContainerGame">

    </FrameLayout>
    <TextView
            android:text="500"
            android:background="@drawable/ic_head_mester_brain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtBarinNumberMain"
            android:layout_toEndOf="@+id/imgMenuAG" android:layout_marginTop="16dp"
            android:textSize="@dimen/txt_normal" android:textStyle="bold"
            android:textColor="@color/light" android:paddingStart="16dp" android:paddingEnd="16dp"
            android:paddingTop="8dp" android:paddingBottom="8dp"/>
    <ImageView
            android:layout_width="48dp"
            android:layout_height="244dp"
            app:srcCompat="@drawable/menu_animate"
            android:id="@+id/imgMenuAG"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"/>
    <Button
            android:orientation="vertical"
            android:layout_width="56dp"
            android:layout_height="60dp"
            android:layout_marginTop="33dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" android:background="@android:color/transparent"
            android:id="@+id/btnHelpAG" android:visibility="gone">
    </Button>
    <Button
            android:layout_width="56dp"
            android:layout_height="60dp" android:id="@+id/btnBackMenuAG"
            android:background="@android:color/transparent" android:layout_marginStart="12dp"
            android:layout_marginTop="116dp" android:visibility="gone"/>
    <Button
            android:layout_width="56dp"
            android:layout_height="60dp" android:id="@+id/btnVolumeAG"
            android:background="@android:color/transparent" android:layout_marginStart="12dp"
            android:layout_marginTop="200dp" android:visibility="gone"/>
    <Button
            android:layout_width="56dp"
            android:layout_height="60dp" android:id="@+id/btnMenuAG" android:layout_marginStart="12dp"
            android:layout_marginTop="15dp" android:background="@android:color/transparent"/>
</RelativeLayout>