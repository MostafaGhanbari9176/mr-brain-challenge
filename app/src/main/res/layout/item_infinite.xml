<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="256dp" android:layout_height="256dp">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="24dp" app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@android:color/transparent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/item_infinite"
                android:id="@+id/LLItemInfinite">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="1">
                <TextView
                        android:text="بی پایان"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/txtSubjectInfinite"
                        android:gravity="bottom|center"
                        android:textStyle="bold" android:textSize="@dimen/txt_normal"
                        android:textColor="@color/light3"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="1" android:gravity="center|top"
                    android:paddingBottom="16dp">
                <TextView
                        android:text="1398"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/txtScoreInfinite" android:gravity="center"
                        android:textStyle="bold" android:textColor="@color/light3"
                        android:textSize="@dimen/txt_normal"/>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp" app:srcCompat="@drawable/ic_lock_black_24dp"
                        android:id="@+id/imgLockInfinite" android:padding="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>